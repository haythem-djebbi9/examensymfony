{% extends 'base.html.twig' %}

{% block title %}edit New Book{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Add New Book</h2>
    <form method="post">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success mt-3">Save</button>
        <a href="{{ path('app_book_index') }}" class="btn btn-secondary mt-3">Cancel</a>
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
