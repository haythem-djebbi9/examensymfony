{% extends 'base.html.twig' %}

{% block title %}Books List{% endblock %}

{% block body %}
<h2>Books List</h2>
<a href="{{ path('app_book_add') }}" class="btn btn-primary">Add New Book</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.category }}</td>
                <td>
                    <a href="{{ path('app_book_edit', { id: book.id }) }}" class="btn btn-warning">Edit</a>
                    <form action="{{ path('app_book_delete', { id: book.id }) }}" method="post" style="display:inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
